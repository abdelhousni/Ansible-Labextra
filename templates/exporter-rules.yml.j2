groups:
- name: exporter-rules
  rules:
  - alert: ExporterDown
    expr: up == 0
    for: {{tower_scrape}}
    labels:
      severity: critical
    annotations:
      description: 'Metrics exporter service for {% raw %}{{ $labels.job }}{% endraw %} running on {% raw %}{{ $labels.instance }}{% endraw %} has been down for more than 5 minutes.'
      summary: 'Exporter down (instance: {% raw %}{{ $labels.job }}{% endraw %})'